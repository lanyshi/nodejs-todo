<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title> Todo List </title>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <h2> Todo List </h2>
    </div>

    <form class="form-row justify-content-center" action ="/addtodo" method="POST">
        <div class="form-group col-md-6 mb-2">
            <input type="text" class="form-control" name="newtodo" placeholder="Enter a new task here">
        </div>
        <button class="btn col-sm-1 mb-2"> Add Task </button>
    </form>

<!--    <button formaction="/removetask" type="submit"> Remove </button>-->
    <div class="row justify-content-center">
        <ul class="list-group list-group-flush col-6">
            <% for(var i = 0; i < todoList.length; i++) { %>
            <li class="list-group-item"><input type="checkbox" name="complete" value="<%= todoList[i].name %>" /> <%= todoList[i].name %> </li>
            <% } %>
        </ul>
    </div>

    <div class="row justify-content-center">
        <h2> Completed task </h2>
    </div>
</div>
</body>
</html>