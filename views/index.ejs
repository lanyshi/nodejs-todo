<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title> Todo List </title>
</head>
<body>
<div class="container" style="position: relative; top: 15%">
    <div class="row justify-content-center">
        <h2> Todo List </h2>
    </div>

    <form class="form-row justify-content-center" action ="/addtodo" method="POST">
        <div class="form-group col-md-6 mb-2">
            <input type="text" class="form-control" name="newtodo" placeholder="Enter a new task here">
        </div>
        <button class="btn btn-primary col-sm-1 mb-2"> Add Task </button>
    </form>

<!--    <button formaction="/removetask" type="submit"> Remove </button>-->
    <form action="/completetodo" method="POST">
        <div class="row justify-content-center">
            <ul class="col-6">
                <% for(var i = 0; i < todoList.length; i++) { %>
                <li style="list-style: none"><input type="checkbox" name="completed" value="<%= todoList[i].name %>" onchange="this.form.submit()"/> <%= todoList[i].name %> </li>
                <% } %>
            </ul>
        </div>
    </form>

    <div class="row justify-content-center">
        <h2> Completed Tasks </h2>
    </div>
    <div class="row justify-content-center">
        <ul class="col-6">
            <% for(var i = 0; i < completedList.length; i++) { %>
                <li style="list-style: none"><del> <%= completedList[i].name %> </del></li>
            <% } %>
        </ul>
    </div>
</div>
</body>
</html>